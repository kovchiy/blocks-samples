.Table
    border-radius radius-inside
    padding 2px 10px
    box-shadow inset 0 0 0 2px rgba(0,0,0,alpha-border)
    white-space nowrap
    overflow hidden

    &_valign
        &_baseline .table__cell:not(.table__head)
            vertical-align baseline
        &_middle .table__cell:not(.table__head)
            vertical-align middle
        &_bottom .table__cell:not(.table__head)
            vertical-align bottom
        &_top .table__cell:not(.table__head)
            vertical-align top

    &__body
        border-collapse collapse
        border-spacing 0
        border none
        width 100%

    &__row
        & + &
        .Table__heads + &
            border-top 1px solid rgba(0,0,0,alpha-border / 2)

    &__cell
        padding 2ex 0
        &:not(:first-child)
            padding-left 2ex
        &_right
            text-align right
        &_center
            text-align center
            padding-right 2ex
        &_max
            width 100%
        &_active
            color color-link
        &_nowrap
            white-space nowrap
        &_strong
            font-weight bold
        &_col_half
            padding-left 0 @css{!important}

    &__head
        font-weight bold
        &_single
            padding 0

    .horizontalscroll
        margin-left -10px
        margin-right -10px

    .horizontalscroll__scroll
        padding-left 10px
        padding-right 10px
